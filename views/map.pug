body

  .navbar.navbar-inverse.navbar-fixed-top
    .navbar-inner
      .container
        a.brand ghini gardens
        .collapse.nav-collapse
          ul.nav.navbar-nav
            li.dropdown
              a.dropdown-toggle(href='#', data-toggle='dropdown')
                i.icon-zoom-in.icon-white
                |  gardens
                b.caret
              ul#gardens-menu-list.dropdown-menu
                li#gardens-menu-item-world
                  a(href='#', onclick='fireSelectGarden(\'\'); return false;')
                    i.icon-home.icon-black
                    |  world
            li.dropdown
              a.dropdown-toggle(href='#', data-toggle='dropdown')
                i.icon-off.icon-white
                |  toggle
                b.caret
              ul#toggle-menu-list.dropdown-menu

  #content
    #map
    #map-ui
      div.panel.panel-danger
        div.panel-heading
          ul.nav.nav-pills
            li.active(style='display: block;')
              a(data-toggle='pill' href='#input-species') species<br/>lookup
            li#search-by-accession-tab(style='display: none;')
              a(data-toggle='pill' href='#input-accession') accession<br/>lookup
            li#search-by-tag-tab(style='display: none;')
              a(data-toggle='pill' href='#input-tag') tag<br/>lookup
          div.class-content.tab-content
            div#input-species.tab-pane.fade.in.active
              input(type='text', onkeyup='match_species(this.value)', style='margin:3pt;')
              div.panel-content
                table#result.table
            div#input-accession.tab-pane.fade
              p todo - accession
              div.panel-content
                table#result-a.table
            div#input-tag.tab-pane.fade.in
              p todo - tag
              div.panel-content
                table#result-t.table
    #accessions

